[init]
  templatedir = ~/.git_template
	defaultBranch = main
[core]
	editor = vim
  excludesfile = /Users/phil/.gitignore
	autocrlf = input
	eol = lf
[commit]
  template = ~/.gitmessage
[color]
  ui = auto
[alias]
  aa = add --all
  ap = add --patch
  branches = for-each-ref --sort=-committerdate --format=\"%(color:blue)%(authordate:relative)\t%(color:red)%(authorname)\t%(color:white)%(color:bold)%(refname:short)\" refs/remotes
  ci = commit -v
  co = checkout
  pf = push --force-with-lease
  st = status
[fetch]
  prune = true
[rebase]
  autosquash = true
[include]
  path = ~/.gitconfig.local
[diff]
  colorMoved = zebra
[user]
  name = "Phil Sturgeon"
	email = 67381+philsturgeon@users.noreply.github.com
[push]
	default = matching
	autoSetupRemote = true
[branch]
	autoSetupMerge = always
[merge]
  tool = vscode
[mergetool "vscode"]
  cmd = code --wait $MERGED
[diff]
  tool = vscode
[difftool "vscode"]
  cmd = code --wait --diff $LOCAL $REMOTE
[pull]
	rebase = false
