# Unix
alias ll="ls -al"
alias ln="ln -v"
alias mkdir="mkdir -p"
alias e="$EDITOR"
alias v="$VISUAL"

alias reload!='source ~/.zshrc'

# PHP
alias sail='[ -f sail ] && bash sail || bash vendor/bin/sail'

# Rails
alias b="bundle"
alias be="bundle exec"

# Git
alias pr="gh pr create"
alias gap="git add -p"
alias glg="git lg"
alias gp="git push"
alias gpl="git pull"
alias gdf="git diff --patience"
alias gc="git commit"
alias gcv="git commit -av"
alias gcm="git commit -am"
alias gca="git commit -a"
alias gcan="git commit -a --no-edit"
alias gca!="git commit -a --amend"
alias gcan!="git commit -a --no-edit --amend"
alias gitclean='git branch --merge main | grep -v main | grep -v "*" | xargs git branch -d'
alias gitfiles='git diff-tree --no-commit-id --name-only -r'
alias gs="git switch"
alias gsc="git switch -c"
alias gst="git status -sb"
alias gr="git restore"

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

# Include custom aliases
[[ -f ~/.aliases.local ]] && source ~/.aliases.local
